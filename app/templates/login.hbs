<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h3>Login</h3>
		<div class="panel panel-default">
			<div class="panel-body">
				<form {{action 'authenticate' on='submit'}} class="form-horizontal">
					<div class="form-group">
						<label for="email" class="control-label col-sm-2">User / Email</label>
						<div class="col-sm-10 col-md-10">
							{{input id='email' placeholder='Enter Email' value=email size="20"}}
						</div>
					</div>
					<div class="form-group">
						<label for="password" class="control-label col-sm-2">Password</label>
						<div class="col-sm-10 col-md-10">
							{{input id='password' placeholder='Enter Password' type='password' value=password size="20"}}
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-10 col-sm-offset-2 col-md-6 col-md-offset-3">
							<button type="submit">Login</button>
						</div>
					</div>
					{{#if errorMessage}}
					<div class="form-group">
						<p>{{errorMessage}}</p>
					</div>
					{{/if}}
				</form>
			</div>
		</div>
	</div>
</div>