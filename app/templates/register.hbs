<form {{action 'register' on='submit'}}>
  <label for="email">Email</label>
  {{input id='email' placeholder='Enter Email' value=email}}
  <label for="password">Password</label>
  {{input id='password' placeholder='Enter Password' type='password' value=password}}
  <label for="password2">Repeat Password</label>
  {{input id='password2' placeholder='Repeat Password' type='password' value=password2}}
  <label for="name">Name</label>
  {{input id='name' placeholder='Enter name' value=name}}
  <button type="submit">Login</button>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</form>